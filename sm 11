#include <iostream>

using namespace std;

int main() {

	setlocale(0, "");
	cout << "[ + ] Программа - “Геометрические фигуры”" << endl;
	cout << endl;
	cout << "[1] Линия" << endl;
	cout << "[2] квадрат" << endl;
	cout << endl;
	cout << "введите число: " << endl;
	int c;
	cin >> c;
	if (c == 1) {
	
		cout << "введите длинну линии: " << endl;
		int b;
		int n = 0;
		cin >> b;
		while (n < b) {
			cout << "# ";

			n++;
		}
		
	}

	if (c == 2) {
		cout << "введите сторону квадрата" << endl;
		int v;
		int t = 0;
		cin >> v;
		while (t < v) {
			while (t < v) {
				cout << "# ";

				t++;
			}
		}
	}








	int a; cin >> a;



}
